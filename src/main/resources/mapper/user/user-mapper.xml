<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
    <select id="selectUserDto" parameterType="java.lang.String" resultType="com.cmci.user.model.UserDto">
        <![CDATA[
        SELECT * FROM cmcidb1.ST_COM_USER_INFO WHERE ID = #{id}
        ]]>
    </select>

    <select id="selectUserMap" parameterType="java.lang.String" resultType="java.util.HashMap">
        <![CDATA[
        SELECT * FROM cmcidb1.ST_COM_USER_INFO WHERE ID = #{id}
        ]]>
    </select>

    <insert id="insertUserInfo" parameterType="com.cmci.user.model.UserDto">
        <![CDATA[
        INSERT INTO cmcidb1.ST_COM_USER_INFO (ID, USER_ID, USER_PWD, USER_NAME, DEPT_CODE, DEPT_NAME)
        VALUES (
                   uuid(), #{userId}, #{userPwd}, #{userName}, #{deptCode}, #{deptName}
               )
        ]]>
    </insert>
</mapper>